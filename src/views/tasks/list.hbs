<div class="row">
  {{#each tasks}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h3>{{ title }}</h3>
          <p>{{ description }}</p>
        </div>
        <div class="card-footer d-flex justify-content-between betalign-items-center">
          <a href="/tasks/delete/{{id}}" class="btn btn-danger">
            Delete
          </a>
          <a href="/tasks/edit{{id}}" class="btn btn-secondary">
            Edit
          </a>
        </div>

      </div>
        
    </div>
  {{else}}
    <p class="text-white display-3 text-center my-5">There are no Tasks</p>
  {{/each}}
</div>
